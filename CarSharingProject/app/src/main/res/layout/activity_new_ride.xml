<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NewRideActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_ride_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/main_color_border"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="5dp"
                android:gravity="center|start"
                android:paddingHorizontal="8dp"
                android:hint="@string/new_ride_address_text"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/new_ride_address_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="8dp"
                android:textColor="@color/main_color"
                android:text="@string/new_ride_check_text" />

            <EditText
                android:id="@+id/new_ride_time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:background="@drawable/main_color_border"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:hint="@string/new_ride_time_text"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/new_ride_note"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="top"
                android:layout_gravity="center"
                android:background="@drawable/main_color_border"
                android:drawablePadding="8dp"
                android:inputType="text|textMultiLine"
                android:hint="@string/new_ride_note_text"
                android:padding="8dp"/>
            <Button
                android:id="@+id/new_ride_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                android:text="@string/new_ride_button_text"
                android:textSize="18sp"
                app:cornerRadius="30dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>